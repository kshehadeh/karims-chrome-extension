{
    "manifest_version": 3,
    "name": "Karim's Chrome Extension",
    "version": "1.0.0",
    "permissions": [
        "tabs",
        "activeTab",
        "scripting",
        "clipboardWrite",
        "sidePanel",
        "contextMenus",
        "storage"
    ],
    "background": {
        "service_worker": "src/background.js",
        "type": "module"
    },
    "side_panel": {
        "default_path": "src/content/features/sidebar/welcome-sb.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content.js"
            ],
            "run_at": "document_end",
            "type": "module"
        }
    ],
    "web_accessible_resources": [{
        "matches": ["<all_urls>"],
        "resources": ["src/content/features/copy-url/index.js"]
    }],    
    "action": {
        "default_title": "Click to open panel"
    },
    "commands": {
        
        "copy_tab_url": {
            "suggested_key": {
                "default": "Ctrl+Shift+C",
                "mac": "Command+Shift+C"
            },
            "description": "Copy the current tab's URL to clipboard"
        },
        "close_old_tabs": {
            "description": "Close tabs that are older than the configured time"
        },
        "toggle_sidebar": {
            "suggested_key": {
                "default": "Ctrl+S",
                "mac": "Command+S"
            },
            "description": "Toggle sidebar visibility"
        }
    },
    "options_ui": {
        "page": "src/options/options.html",
        "open_in_tab": false
    }
}